:80 {
    # IRC WebSocket
    handle /ws {
        reverse_proxy ergo:8097
    }

    # File uploads, auth bridge
    handle /api/* {
        reverse_proxy virc-files:8080
    }

    # Server config discovery
    handle /.well-known/* {
        reverse_proxy virc-files:8080
    }

    # Static client files with SPA fallback
    handle {
        root * /srv/virc

        # Immutable hashed assets — cache forever
        @immutable path /_app/immutable/*
        header @immutable Cache-Control "public, max-age=31536000, immutable"

        # HTML and other non-hashed files — always revalidate
        @html path *.html /
        header @html Cache-Control "no-cache"

        try_files {path} /index.html
        file_server
    }
}
